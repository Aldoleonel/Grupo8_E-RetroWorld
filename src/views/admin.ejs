<!DOCTYPE html>
<html lang="en">
<%- include('partials/head',{title:"Panel de Admin"}) %>

    <body class="detalleProducto">
        <%- include('partials/header',{title:"Panel de Admin"}) %>


            <div class="container mt-4">
                
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="home-tab" data-bs-toggle="tab"
                            data-bs-target="#home-tab-pane" type="button" role="tab" aria-controls="home-tab-pane"
                            aria-selected="true">Productos</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="profile-tab" data-bs-toggle="tab"
                            data-bs-target="#profile-tab-pane" type="button" role="tab"
                            aria-controls="profile-tab-pane" aria-selected="false">Categorias</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="contact-tab" data-bs-toggle="tab"
                            data-bs-target="#contact-tab-pane" type="button" role="tab"
                            aria-controls="contact-tab-pane" aria-selected="false">Usuarios</button>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel"
                        aria-labelledby="home-tab" tabindex="0">
                        <%- include('partials/tableProduct', {
                            products: products
                        }) %>
                        <div class="d-flex justify-content-end mb-4">
                            <a href="/products/add" class="btn  bg-primary-subtle">Crear Producto</a>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab"
                        tabindex="0">
                        <%- include('partials/tableCategory',{
                            category
                        }) %>
                    </div>
                    <div class="tab-pane fade" id="contact-tab-pane" role="tabpanel" aria-labelledby="contact-tab"
                        tabindex="0">
                        <%- include('partials/tableUsers',{
                            users: users
                        }) %>
                        <div class="d-flex justify-content-end mb-4">
                            <a href="/users/register" class="btn  bg-primary-subtle">Crear usuario</a>
                        </div>
                    </div>
                </div>
                
            </div>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
            <%- include('partials/footer') %>
            <script>
                // Función para cambiar el rol del usuario específico
                console.log("conectado,correctamente");
                
                function changeRole(userId, newRoleId) {
                    fetch(`/api/users/${userId}/change-role`, {
                        method: 'PUT',
                        body: JSON.stringify({ newRoleId }),
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    })
                    .then(response => {
                        if (response.ok) {
                            console.log('Rol cambiado correctamente');
                        } else {
                            console.error('Error al cambiar el rol');
                        }
                    })
                    
                    .catch(error => {
                        console.error('Error en la solicitud:', error);
                    });
                    console.log(userId);
                }
            
                // Función para cambiar el rol de los usuarios seleccionados
                function changeSelectedRoles() {
                    const selectedUsers = document.querySelectorAll('input[name="selectedUsers"]:checked');
                    selectedUsers.forEach(user => {
                        const userId = user.value;
                        const newRoleId = prompt(`Ingrese el nuevo roleId para el usuario ${userId}`);
                        if (newRoleId !== null) {
                            changeRole(userId, newRoleId);
                        }
                    });
                }
            </script>
    </body>

</html>