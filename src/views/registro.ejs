<!DOCTYPE html>
<html lang="en">
<%- include('partials/head',{
    title: 'Registro'
}) %>
<body>
    <%- include('partials/header') %>
    <main class="form__main">
        <!-- REGISTRO -->
        <section class="form__registro">
            <div class="form-box">
                <h2>Crea tu cuenta</h2>
                <form action="/register" method="POST">
                    <div class="form-input">
                        <label for="name">Nombre:</label>
                        <input type="text" id="name" name="name" >
                    </div>
                    <div class="form-input">
                        <label for="lastname">Apellido:</label>
                        <input type="text" id="lastname" name="lastname" >
                    </div>
                    <div class="form-input">
                        <label for="date">Fecha de nacimiento:</label>
                        <input type="date" id="date" name="date" value="2018-07-22" min="1980-01-01" max="2030-12-31">

                    </div>
                    <div class="form-input">
                        <label for="gender">Género:</label>
                        <select id="gender" name="gender" required>
                            <option value="masculino">Masculino</option>
                            <option value="femenino">Femenino</option>
                        </select>
                    </div>
                    <div class="form-input">
                        <label for="document-number">Número de documento:</label>
                        <input type="text" id="document-number" name="document-number" required>
                    </div>
                    <div class="form-input">
                        <label for="documento">Tipo de documento:</label>
                        <select id="documento" name="documento" required>
                            <option value="DNI">DNI</option>
                            <option value="LE">Libreta de enrolamiento</option>
                            <option value="LC">libreta civica</option>
                            <option value="Cuil">Cuil</option>
                            <option value="pasaporte">Pasaporte</option>
                        </select>
                        </div>
                    <div class="form-input">
                        <label for="phone">Teléfono:</label>
                        <input type="text" id="phone" name="phone" required>
                    </div>
                    <div class="form-input">
                        <label for="email">E-mail</label>
                        <input type="email" id="email" name="email" required>                        
                    </div>
                    <div class="form-input">
                        <label for="password">Contraseña:</label>
                        <input type="password" id="password" name="password" required>
                    </div>
                    
                    <div class="form-input">
                        <label for="repeat-password">Repetir contraseña:</label>
                        <input type="password" id="repeat-password" name="repeat-password" required>                        
                    </div>
                    
                    <div class="form-input form-checkbox">
                        <input type="checkbox" id="accept-terms" name="accept-terms" required>
                        <label for="accept-terms">Acepto las Políticas de privacidad y Términos y Condiciones</label>
                    </div>
                    <div class="form-submit-button">
                        <button type="submit">Crear cuenta</button>
                    </div>
                </form>
                <div class="form-link">
                    <a class="form__link" href="#">¿Ya tienes cuenta? Ingresa</a>
                </div>
            </div>
        </section>
    </main>
    <%- include('partials/footer') %>

</body>

</html>