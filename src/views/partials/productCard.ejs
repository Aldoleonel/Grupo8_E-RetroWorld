

<article class="home__productos--article" >
    <a href="/products/detail/<%= id %>"><img src="/img/products/<%= image || 'default-img.png' %>" alt="producto"></a>
    <div class="home__productos-producto">
        <p class="descripcion"><%= name %></p>
        <p class="precio">$<%= toThousand((price - (price * discount / 100)).toFixed(0)) %></p>
        <% if (discount) { %>
            <span><%= discount  %> % OFF</span>
           <% } %>

        <input type="button" value="Agregar al carrito">

    </div>
</article>

