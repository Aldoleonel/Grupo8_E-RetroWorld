<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Producto</th>
                <th scope="col">precio</th>
                <th scope="col">descuento</th>
                <th scope="col">Precio Final</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(({id,name, price, discount, description, image,updatedAt}, index)=> { %>
                <tr>
                    <th scope="row">
                        <%= index + 1 %>
                    </th>
                    <td>
                        <%= name %>
                    </td>
                    <td>
                        <%= price%>
                    </td>
                    <td>
                        <%= discount %>
                    </td>
                    <td>
                        <%= price - (price * discount/100)%>
                    </td>
                    <td>
                        <div class="d-flex gap-2">
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                data-bs-target="#detailProduct<%= id %>">
                                <i class="fa-solid fa-eye"></i>
                            </button>

                            <!-- Modal -->
                            <div class="modal fade col-7" id="detailProduct<%= id %>" tabindex="-1" aria-labelledby="detailpProduct<%= id %>Label"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="detailpProduct<%= id %>Label">
                                                <%= name %>
                                            </h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body d-flex justify-content-center">
                                            <div class="card mb-3" >
                                                <div class="row g-0">
                                                    <div class="card--imageConteiner">
                                                        <img src="<%= image %>" class="card__img" alt="...">
                                                    </div>
                                                    <!-- <h5 class="card__title text-white"><%= name %></h5> -->
                                                    <div class="card__content">
                                                        <div class="card-body">
                                                            <p class="card-text text-white"><%= description %></p>
                                                            <p class="card-text text-white">Última actualización: <br> <%= moment(updatedAt).format('DD-MM-YYYY');  %></p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>

                            <a href="/products/edit/<%= id %>" class="btn btn-success"><i
                                    class="fa-solid fa-pen-to-square"></i></a>

                            <!-- <button class="btn btn-danger"><i class="fa-solid fa-trash"></i></button> -->
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                                data-bs-target="#deleteProduct<%= id %>Toggle">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                            <div class="modal fade" id="deleteProduct<%= id %>Toggle" aria-hidden="true"
                                aria-labelledby="exampleModalToggleLabel" tabindex="-1">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalToggleLabel">Warning!!</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Estás seguro que quieres eliminar el producto: <%= name %>?
                                        </div>
                                        <div class="modal-footer">
                                            <form action="/products/delete/<%= id %>?_method=DELETE" method="POST">
                                                <button class="btn btn-primary" data-bs-target="#exampleModalToggle2"
                                                data-bs-toggle="modal">Eliminar</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</div>
<div class="d-flex justify-content-end align-items-center">
    <div class="d-flex justify-content-center align-items-center mb-2 gap-5">
        
        <a href="/products/add" class="btn  bg-primary-subtle">Crear Producto</a>
    </div>
</div>