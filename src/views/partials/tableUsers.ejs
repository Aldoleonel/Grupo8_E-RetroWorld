<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">Email</th>
                <th scope="col">Category</th>
                <th scope="col">image</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(({id, firstName, lastName, email, category, image, role}, index)=> { %>
                <tr>
                    <th scope="row">
                        <%= index + 1 %>
                    </th>
                    <td>
                        <%= firstName %>
                    </td>
                    <td>
                        <%= lastName %>
                    </td>
                    <td>
                        <%= email %>
                    </td>
                    <td>
                        <%= category %>
                    </td>
                    <td>
                        <%= image %>
                    </td>
                    <td>
                        <div class="d-flex gap-2">
                            <a class="btn btn-sm btn-success" href="/categories/edit/<%= id %>"><i
                                    class="fas fa-edit"></i></a>
                            <a class="btn btn-sm btn-danger" href="/categories/remove/<%= id %>"><i
                                    class="fas fa-trash"></i></a>
                            <div class="form-check form-switch">
                                        <input class="form-check-input" value="<%= role.name %>" type="checkbox" role="switch" id="flexSwitchCheckChecked<%= id %>" onclick="modifyState('flexSwitchCheckChecked<%= id %>', '<%=id%>')"   <%= role.name == 'Admin' && 'checked' %> >
                                        <% if (role.name === "Admin") { %>
                                            <span>Admin</span>
                                        <% } %><!-- <label class="form-check-label" for="flexSwitchCheckChecked">Checked switch checkbox input</label> -->
                            </div>
                        </div>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</div>



    
