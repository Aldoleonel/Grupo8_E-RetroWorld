<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">nombre</th>
                <th scope="col">Cant. Product</th>
                <th scope="col">Image</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% category.forEach(({id, name, cant, image}, index)=> { %>
                <tr>
                    <th scope="row">
                        <%= index + 1 %>
                    </th>
                    <td>
                        <%= name %>
                    </td>
                    <td>
                        <%= cant %>
                    </td>
                    <td>
                        <%= image %>
                    </td>
                    <td>
                        <div class="d-flex gap-2">
                            <!-- Button trigger modal -->
                            <a class="btn btn-sm btn-success"
                                href="/categories/edit/<%= id %>"><i
                                    class="fas fa-edit"></i></a>
                            <a class="btn btn-sm btn-danger"
                                href="/categories/remove/<%= id %>"><i
                                    class="fas fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</div>
<div class="d-flex justify-content-end align-items-center">
    <div class="d-flex justify-content-center align-items-center mb-2 gap-5">
        
        <a href="/categories/add" class="btn  bg-primary-subtle">Crear Categor√≠a</a>
    </div>
</div>