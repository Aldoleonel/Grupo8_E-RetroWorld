<!DOCTYPE html>
<html lang="en">
<%- include('partials/head',{
    title: 'Registro'
}) %>

<body>
    <%- include('partials/header') %>
    <main class="form__main">
        <!-- REGISTRO -->
        <section class="form__registro">
            <div class="form-box">
                <h2>Crea tu cuenta</h2>
                <form action="/users/register" method="POST" id="form-register">
                    <div class="form-input">
                        <label for="firstName">Nombre:</label>
                        <input type="text" id="firstName" class="form-control <%= locals.errors && (errors.firstName && 'is-invalid') %>"  name="firstName" value="<%= locals.old && (old.firstName && old.firstName ) %>" >
                        <small class="text-danger ms-2" id="msgError-name">
                            <%= locals.errors && (errors.firstName && errors.firstName.msg) %>
                          </small>
                    </div>
                    <div class="form-input">
                        <label for="lastName">Apellido:</label>
                        <input type="text" id="lastName" class="form-control <%= locals.errors && (errors.lastName && 'is-invalid') %>"  name="lastName" value="<%= locals.old && (old.lastName && old.lastName ) %>" >
                        
                        <small class="text-danger ms-2" id="msgError-lastName">
                            <%= locals.errors && (errors.lastName && errors.lastName.msg) %>
                          </small>
                    </div>
                    <div class="form-input" >
                        <label for="birthdate">Fecha de nacimiento:</label>
                        <input type="date" id="birthdate" name="birthdate" value="2018-07-22" min="1980-01-01" max="2030-12-31" value="<%= locals.old && (old.birthdate && old.birthdate ) %>">

                    </div>
                    <div class="form-input" >
                        <label for="gender">Género:</label>
                        <select id="gender" name="gender" >
                            <option value="masculino">Masculino</option>
                            <option value="femenino">Femenino</option>
                        </select>
                    </div>
                    <div class="form-input" >
                        <label for="phone">Teléfono:</label>
                        <input type="text" id="phone" class="form-control <%= locals.errors && (errors.phone && 'is-invalid') %>"  name="phone" value="<%= locals.old && (old.phone && old.phone ) %>" >
                        <small class="text-danger ms-2"  id="msgError-phone">
                            <%= locals.errors && (errors.phone && errors.phone.msg) %>
                          </small>
                    </div>
                    <div class="form-input">
                        <label for="email">E-mail</label>
                        <input type="email" id="email" class="form-control <%= locals.errors && (errors.email && 'is-invalid') %>"  name="email" value="<%= locals.old && (old.email && old.email ) %>">  
                         
                        <small class="text-danger ms-2"  id="msgError-email">
                            <%= locals.errors && (errors.email && errors.email.msg) %>
                          </small>                    
                    </div>

                   
                    <div class="form-input">
                        <label for="password">Contraseña:</label>
                        <input type="password" id="password" class="form-control <%= locals.errors && (errors.password && 'is-invalid') %>"  name="password" >
                        
                        <small class="text-danger ms-2"  id="msgError-password">
                            <%= locals.errors && (errors.password && errors.password.msg) %>
                          </small>
                    </div>
                    
                    <div class="form-input">
                        <label for="password2">Repetir contraseña:</label>
                        <input type="password" id="password2" class="form-control <%= locals.errors && (errors.password2 && 'is-invalid') %>"  name="password2" >   
                         
                        <small class="text-danger ms-2"  id="msgError-password2">
                            <%= locals.errors && (errors.password2 && errors.password2.msg) %>
                          </small>                  
                    </div>
                    
                    <div class="form-input form-checkbox">
                        <input type="checkbox" id="acceptTerms" name="acceptTerms">
                        <label for="accept-terms">Acepto las Políticas de privacidad y Términos y Condiciones</label>
                        <small class="text-danger ms-2"  id="msgError-terms">
                            <%= locals.errors && (errors.acceptTerms && errors.acceptTerms.msg) %>
                          </small>
                    </div>
                    <small class="text-danger ms-2" id="msgError-empty" %>
                    </small>
                    <div class="form-submit-button">
                        <button type="submit">Crear cuenta</button>
                    </div>
                </form>
                <div class="form-link">
                    <a class="form__link" href="#">¿Ya tienes cuenta? Ingresa</a>
                </div>
            </div>
        </section>
    </main>
    <%- include('partials/footer') %>
    <script src="/js/register.js"></script>
</body>

</html>